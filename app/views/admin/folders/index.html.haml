.table-wrapper#filters_table
  = index_header('folders')
  .row.filter-block
    .pull-right
      = search_field
      = link_to action_accusative('folders', 'add'), [:new, :admin, :folder], class: 'btn-flat success new-user'
  .row
    %table.table.table-hover.filterable
      %thead
        %tr
          %th.icon.sort_th
          %th.sort_th= Folder.human_attribute_name('folder')
          %th.icon
      %tbody
        - @folders.each do |folder|
          %tr{id: "folder_#{folder.id}"}
            %td.icon
            %td= folder.title.presence
            %td
              %ul.actions
                %li= link_to t(:edit), [:edit, :admin, folder], class: 'edit_folder'
                = delete_link(folder)


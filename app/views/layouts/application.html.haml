!!!
%html
  %head
    %title= @page_title
    = stylesheet_link_tag "admin"
    = javascript_include_tag "admin"
    = csrf_meta_tag
  %body
    %header.navbar-inverse{role: "banner"}= render "header"
    #sidebar-nav= render 'anav'
    .content
      #pad-wrapper
        .row
          - if yield(:page_sidebar_third).presence
            .col-md-8
              = notice_window(notice)
              = yield
            .col-md-4= yield(:page_sidebar_third)
          - elsif yield(:page_sidebar_half).presence
            .col-md-6
              = notice_window(notice)
              = yield
            .col-md-6= yield(:page_sidebar_half)
          - else
            .col-md-12
              = notice_window(notice)
              = yield
    = debug(params) if Rails.env == "development"